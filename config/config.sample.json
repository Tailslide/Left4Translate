{
  "game": {
    "logPath": "C:/Program Files (x86)/Steam/steamapps/common/Left 4 Dead 2/left4dead2/console.log",
    "pollInterval": 1000,
    "messageFormat": {
      "regex": "^\\((Survivor|Infected)\\)\\s*(?:C\\s*\\(Infected\\)\\s*)?([^:]+?)\\s*:\\s*(.+)$|^([^:]+?)\\s*:\\s*(.+)$",
      "groups": {
        "team": 1,
        "player": "2,4",
        "message": "3,5"
      }
    }
  },
  "translation": {
    "service": "google",
    "apiKey": "YOUR_API_KEY_HERE",
    "targetLanguage": "en",
    "cacheSize": 1000,
    "rateLimitPerMinute": 100,
    "retryAttempts": 3
  },
  "screen": {
    "port": "COM8",
    "baudRate": 115200,
    "brightness": 50,
    "refreshRate": 1000,
    "display": {
      "fontSize": 14,
      "maxMessages": 12,
      "messageTimeout": 0,
      "layout": {
        "margin": 2,
        "spacing": 2
      }
    }
  },
  "logging": {
    "level": "info",
    "path": "logs/app.log",
    "maxSize": "10MB",
    "backupCount": 5,
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  }
}
